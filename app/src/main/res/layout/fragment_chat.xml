<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabItem21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/profile" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabItem22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/credo" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabItem23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/quest" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabItem24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/bestiary" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabItem25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/passwords" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/container_child"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tabs2" />


</androidx.constraintlayout.widget.ConstraintLayout>