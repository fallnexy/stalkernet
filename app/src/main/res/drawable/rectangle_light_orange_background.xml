<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <corners android:radius="10dp"/>
            <gradient
                android:startColor="#ECD71F"
                android:endColor="#9F9327"
                android:type="linear"
                android:angle="-45"
                />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="10dp"/>
            <gradient
                android:startColor="#00000000"
                android:endColor="#000000"
                android:type="radial"
                android:gradientRadius="500dp"
                />
        </shape>
    </item>
    <!-- Border stroke -->
    <item
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        android:left="0dp">
        <shape>
            <corners android:radius="10dp"/>
            <stroke
                android:width="3dp"
                android:color="#988F40" /> <!-- Border color (red in this example) -->
        </shape>
    </item>
</layer-list>